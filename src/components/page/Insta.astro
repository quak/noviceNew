---

const {block} = Astro.props;

---

<section class="bg-papez-purple px-1 md:px-4 py-12 md:py-24">
	<div class="mx-auto lg:max-w-screen-lg max-w-7xl 2xl:max-w-nov-width">
		
		<h2 class="col-span-2 font-light text-5xl text-klopinj-blue mb-2 uppercase text-center">INSTA REELS</h2>
		
	</div>
	<span class="hidden px-3 pt-3 relative z-50"></span>

	<Fragment set:html={block.dynamicContent} />
</section>

<script is:inline>

	document.addEventListener('astro:page-load', () => {
    	// Find all buttons with the `alert` class on the page.
		const buttons = document.querySelectorAll('.novice-insta-morebutton');
		
		// Handle clicks on each button.
		buttons.forEach((button) => {
			button.addEventListener('click', (event) => {
			var targetElement = event.target || event.srcElement;
			var par =  targetElement.parentNode.parentNode;
			var toogleElements = par.querySelectorAll('.novice-insta-visible');
			
			toogleElements.forEach((toogleelements) => {
				toogleelements.classList.toggle("hidden");
			});


			});
		});

  	});

  </script>

<script>
	import Swiper from 'swiper';
	import 'swiper/css/bundle';
	document.addEventListener('astro:page-load', () => {
	
		
		
		const swiper = new Swiper('.swipervid', {
		direction: 'horizontal',
		loop: true,
		slidesPerView: 1,
		spaceBetween: 16,
		
		navigation: {
			nextEl: '.swiper-button-next',
			prevEl: '.swiper-button-prev',
		},
		
		breakpoints: {
			480: {
			slidesPerView: 2,
			},
			768: {
			slidesPerView: 4,
			}
		}
		
		});
	});
	
</script>